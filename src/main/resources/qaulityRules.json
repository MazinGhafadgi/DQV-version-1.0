[
  {
    "description" : "Data Quality Check against Taxi Data",
    "operationType": "",
    "sinkType": "console",
    "sourceList": [
      {
        "source": {
          "sourceType": "CSVFile",
          "sourcePath": "src/main/resources/taxi/taxi.csv"
        }
      }
    ],
    "checkList":[
      {
        "check": {
          "checkType": "SizeRule",
          "checkValue": "count(*)",
          "description": "Total number of record in taxi data"
        }
      },
      {
        "check": {
          "checkType": "ProportionMissingInPercentage",
          "checkValue": "email",
          "description": "Total percentage of missing emails"
        }
      },
      {
        "check": {
          "checkType": "InRangeRules",
          "checkValue": "vendor_id IN ('CMT', 'VTS')",
          "description": "Total number of valid vendor_id In range of CMT and VTS"
        }
      },
      {
        "check": {
          "checkType": "Uniqueness",
          "checkValue": "hack_license",
          "description": "Total number of Unique hack_license"
        }
      },
      {
        "check": {
          "checkType": "StatisticsRule",
          "checkValue": "MAX(tip_amount)",
          "description": "Maximum tip amount"
        }
      },
      {
        "check": {
          "checkType": "DateTimeRule",
          "checkValue": "dropoff_datetime",
          "description": "Total number of valid dates"
        }
      },
      {
          "check": {
            "checkType": "EmailRule",
            "checkValue": "email",
            "description": "Total number of valid emails"
          }
        },
      {
        "check": {
          "checkType": "NullCheck",
          "checkValue": "email is null",
          "description": "Total number of null values in column emails"
        }
      },
      {
        "check": {
          "checkType": "InvalidEmailRule",
          "checkValue": "email",
          "description": "Total number of invalid emails"
        }
      }
    ]
  }
]
